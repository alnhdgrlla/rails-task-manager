<%= link_to "Edit task", edit_task_path(@task) %>

<h1><%= @task.title %></h1>
<p  class="well"><%= @task.details %></p>

<% if @task.completed %>
  <i class="fa fa-check-square-o"></i> This task is completed
<% else %>
  <i class="fa fa-square-o"></i> This task is not completed yet
<% end %>

<p><%= link_to "Go back to home", tasks_path %> </p>
<p><%= link_to "Delete this task", task_path(@task), method: :delete, data: {confirm:"Are you sure?"} %> </p>
